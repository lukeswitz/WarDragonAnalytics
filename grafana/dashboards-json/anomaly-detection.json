          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "-- Detect drones that remain in a small geographic area\nWITH drone_positions AS (\n  SELECT drone_id, kit_id, time, lat, lon\n  FROM drones\n  WHERE time >= $__timeFrom() AND time <= $__timeTo()\n    AND ('$kit_filter' = 'All' OR kit_id = '$kit_filter')\n    AND lat IS NOT NULL AND lon IS NOT NULL\n    AND track_type = 'drone'\n),\ndrone_bounds AS (\n  SELECT \n    drone_id, kit_id,\n    COUNT(*) AS detection_count,\n    MIN(time) AS start_time, MAX(time) AS end_time,\n    EXTRACT(EPOCH FROM (MAX(time) - MIN(time))) AS duration_seconds,\n    AVG(lat) AS center_lat, AVG(lon) AS center_lon,\n    GREATEST((MAX(lat)-MIN(lat))*111000, (MAX(lon)-MIN(lon))*111000*COS(RADIANS(AVG(lat))))/2 AS radius_m\n  FROM drone_positions\n  GROUP BY drone_id, kit_id\n  HAVING COUNT(*) >= 3 AND EXTRACT(EPOCH FROM (MAX(time) - MIN(time))) >= 180\n)\nSELECT \n  drone_id AS \"Drone ID\", kit_id AS \"Kit\",\n  ROUND(duration_seconds::NUMERIC) AS \"Duration (s)\",\n  ROUND(radius_m::NUMERIC, 1) AS \"Radius (m)\",\n  ROUND(center_lat::NUMERIC, 5) AS \"Center Lat\",\n  ROUND(center_lon::NUMERIC, 5) AS \"Center Lon\",\n  start_time AS \"Start\", end_time AS \"End\"\nFROM drone_bounds WHERE radius_m < 200\nORDER BY duration_seconds DESC LIMIT 50;",
